<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="20 seconds" >

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder
            by default -->
        <encoder>
            <pattern>%d{MM/dd/yyyy HH:mm:ss.SSS} [%thread] %-5level %logger{36} %X{sourceId} %X{corrSourceId} %X{corrId} %X{corrIdSeq} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <appender name="applogfile"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>application.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>application.%d{yyyy-MM-dd}.log
            </FileNamePattern>
            <MaxHistory>30</MaxHistory>
        </rollingPolicy>
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%d{MM/dd/yyyy HH:mm:ss.SSS} [%thread] [%level] %logger{36} %X{sourceId} %X{corrSourceId} %X{corrId} %X{corrIdSeq} - %msg%n
            </Pattern>
        </layout>
    </appender>

    <!--<logger name="com.lendingclub" level="INFO" />-->

    <root level="INFO">
        <appender-ref ref="applogfile" />
    </root>
</configuration>
